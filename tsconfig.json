{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/whatsapp-web.js/**/*.js"],  // Include .js files
  "exclude": ["node_modules"]
}